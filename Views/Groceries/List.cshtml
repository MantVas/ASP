@{ ViewData["Title"] = "Groceries List"; }
@model List<Groceries>
<div class="text-center">
    @foreach (var item in Model)
    {
        <p>@item.Id @item.Name <a href="@Url.Action("Delete", "Groceries", new { ID = item.Id })">Delete</a></p>
    }
    <hr />
    <form method="post" asp-controller="Groceries" asp-action="Create">
        <label>Name:</label>
        <input type="text" name="name" />
        <input type="submit" value="Add Grocery" name="submit" />
    </form>

</div>
